# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Published image tags for runtime-only deployment
ALBION_HELPER_BACKEND_IMAGE=ghcr.io/your-org/albion-helper-backend:latest
ALBION_HELPER_FRONTEND_IMAGE=ghcr.io/your-org/albion-helper-frontend:latest
ALBIONDATA_CLIENT_IMAGE=ghcr.io/your-org/albion-helper-albiondata-client:latest

# Ollama configuration
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT_S=120

# Albion Online Data Project (AODP)
# Region: europe, west (americas), east (asia)
AODP_REGION=europe
# Base URL is derived from region, but can be overridden:
# AODP_BASE_URL=https://europe.albion-online-data.com
AODP_TIMEOUT_S=15
AODP_CACHE_TTL_S=60
# Freshness TTL: data older than this (in seconds) is considered stale
AODP_FRESHNESS_TTL_S=900

# Optional item catalog path for name resolution
ITEM_CATALOG_PATH=

# OpenAI configuration
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com
OPENAI_MODEL=
OPENAI_TIMEOUT_S=30

# Anthropic configuration
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=
ANTHROPIC_VERSION=2023-06-01
ANTHROPIC_TIMEOUT_S=30

# Gemini configuration
GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
GEMINI_MODEL=
GEMINI_TIMEOUT_S=30

# Langfuse tracing (optional)
# Optional override to force on/off (`true` or `false`).
# Empty = auto-enable only when keys are present.
LANGFUSE_ENABLED=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com
# Preferred variable name:
LANGFUSE_TRACING_ENVIRONMENT=local
# Backward-compatible alias:
LANGFUSE_ENV=local
LANGFUSE_RELEASE=
